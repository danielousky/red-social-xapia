= form_for @comment do |f|
  - @comment.user = current_user
  - if @comment.errors.any?
    #error_explanation
      %h2= "#{pluralize(@comment.errors.count, "error")} impiden que se guarde la puplicación:"
      %ul
        - @comment.errors.full_messages.each do |message|
          %li= message

  .form-group
    = f.text_field :title, placeholder: 'Título', class: 'form-control'
  .form-group
    = f.text_area :content, class: 'form-control', row: "3", required: true, placeholder: '¿Qué está pasando?'
  .float-right
    .badge.badge-light
      Privado
      = f.check_box :private
    = f.hidden_field :user_id

    = f.submit 'Enviar', class: 'btn btn-sm btn-success'
