-# navigation styled for Bootstrap 3.0
.container-fluid 
  
  %nav.navbar.sticky-top.navbar-dark.bg-dark.justify-content-between.navbar-expand
    %h3.navbar-brand= link_to 'Red Social Xappia', visitors_path
    - if current_user
      %span.text-info= current_user.name
      = form_tag(users_path, method: :get, class: 'form-inline' ) do
        = text_field_tag :keywords, nil ,class: 'form-control mr-sm-2', placeholder: 'Buscar Amigos', type: 'search', 'aria-label' => 'Search'
        %button.btn.btn-outline-info.my-2.my-sm-0.btn-sm{:type => "submit"} Buscar
      .nav-item

      .nav-item.float-right
        = link_to destroy_user_session_path, {method: :delete, class: 'btn btn-sm btn-outline-secondary' } do 
          Salir
    - elsif !controller_name.eql? 'welcome'
      .nav-item.float-right
        = link_to user_session_path, {method: :get, class: 'btn btn-sm btn-outline-info' } do 
          Entrar
